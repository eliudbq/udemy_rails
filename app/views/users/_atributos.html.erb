<%= render 'layouts/mensajes', error:@usuario %>
<%= form_with(model: @usuario, local: true)  do |f| %>
  <div class="container">
      <div class="form-group row">
        <%=f.label :Nombre, class:"form-label col-2"%>
        <%= f.text_field :name, class:"form-control col-10"%>
      </div>
      <div class="form-group row">
        <%=f.label :Email, class:"form-label col-2"%>
        <%= f.text_field :mail, class:"form-control col-10"%>
      </div>
      <div class="form-group row">
        <%= f.label :Password, class:"form-label col-2"%>
        <%= f.password_field :password, class:"form-control col-10"%>
      </div>
      <div class="form-group row align-items-center">
        <%= f.submit class:"btn btn-success"%>
      </div>
<% end %>