<%= render 'layouts/mensajes', error:@articulo %>
<%= form_with(model: @articulo, local: true)  do |f| %>
  <div class="container">
      <div class="form-group row">
        <%=f.label :titulo, class:"form-label col-2"%><%= f.text_field :titulo, class:"form-control col-10"%>
      </div>
      <div class="form-group row">
        <%=f.label :texto, class:"form-label col-2"%><%= f.text_area :texto, class:"form-control col-10"%>
      </div>
      <div class="form-group row">
        <%=f.label :categoria, class:"form-label col-2"%><%= f.text_field :categoria, class:"form-control col-4"%>
        <%=f.label :fecha, class:"form-label col-2"%><%= f.text_field :fecha, class:"form-control col-4"%>
      </div>
      <div class="form-group row">
        <%= f.label :user_id, class:"form-label col-2"%>
        <%= f.collection_select(:user_id, User.all, :id, :name)%>
        <%=f.label :precio, class:"form-label col-2"%><%= f.number_field :precio, class:"form-control col-4"%>
      </div>
      <div class="form-group row align-items-center">
        <%= f.submit class:"btn btn-success"%>
      </div>
<% end %>